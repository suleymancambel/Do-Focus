<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/bottomSheet"
    android:layout_height="wrap_content">



    
    <View
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:background="@drawable/delete_indictor_shape"
        android:layout_height="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/producksansregular"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="@string/deletesure"/>


<TextView
    android:id="@+id/delete_no"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:text="@string/no"
    android:gravity="center"
    android:textSize="24sp"
    android:layout_marginLeft="10dp"
android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    android:padding="7dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/no_delete"
    android:textColor="@color/black"
    android:fontFamily="@font/producksansregular"/>

    <TextView
        android:id="@+id/delete_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:padding="7dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/yes_delete"
        android:textColor="@color/black"
        android:fontFamily="@font/producksansregular"/>

</LinearLayout>